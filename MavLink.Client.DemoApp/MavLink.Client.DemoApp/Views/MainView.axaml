<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MavLink.Client.DemoApp.ViewModels"
             xmlns:avalonia="clr-namespace:Mapsui.UI.Avalonia;assembly=Mapsui.UI.Avalonia"
             xmlns:controls="clr-namespace:MavLink.Client.DemoApp.Controls"
             xmlns:demoApp="clr-namespace:MavLink.Client.DemoApp"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MavLink.Client.DemoApp.Views.MainView"
             x:DataType="vm:MainViewModel">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="*, auto">
        <controls:Map Grid.Row="0" Center="{Binding Position}">
        
        </controls:Map>        
        <StackPanel Grid.Row="1" Orientation="Horizontal">
        </StackPanel>
    </Grid>

</UserControl>